<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="lpoo.pocketsave.View.OverviewListFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/white"
    app:layoutManager="LinearLayoutManager"
    android:orientation="vertical"
    tools:context="lpoo.pocketsave.View.OverviewListFragment"
    tools:listitem="@layout/fragment_overviewlist">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:checkedButton="@+id/linear_layout_rb">
        <RadioButton android:id="@+id/linear_layout_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear"/>
        <RadioButton android:id="@+id/grid_layout_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid"/>
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/OverviewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
