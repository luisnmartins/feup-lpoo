<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lpoo.pocketsave.View.Month">

    <include
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include">
    </include>

    <ImageButton
        android:id="@+id/editIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SetIncome"
        android:layout_toEndOf="@+id/SetFixedExpenses"
        android:background="@mipmap/ic_mode_edit_black_24dp" />



    <TextView
        android:id="@+id/Income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="51dp"
        android:text="Income" />

    <EditText
        android:id="@+id/SetIncome"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/Income"
        android:layout_alignBottom="@+id/Income"
        android:layout_toEndOf="@+id/FixedExpenses" />

    <ImageButton
        android:id="@+id/editExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_mode_edit_black_24dp"
        android:layout_above="@+id/EstimatedVariableExpenses"
        android:layout_toEndOf="@+id/EstimatedVariableExpenses" />

    <TextView
        android:id="@+id/FixedExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="FixedExpenses"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/SetIncome"
        android:layout_alignStart="@+id/Income" />

    <EditText
        android:id="@+id/SetFixedExpenses"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/FixedExpenses"
        android:layout_toEndOf="@+id/FixedExpenses"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/EstimatedVariableExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Income"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/SetFixedExpenses"
        android:layout_marginTop="62dp"
        android:text="Estimated Variable Expenses" />

    <TextView
        android:id="@+id/categorycombobox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Choose Category"
        android:onClick="getCategoriesList"
        android:layout_below="@+id/EstimatedVariableExpenses"
        android:layout_toStartOf="@+id/SetFixedExpenses"
        android:layout_marginEnd="13dp" />

    <EditText
        android:id="@+id/SetCatValue"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categorycombobox"
        android:layout_alignStart="@+id/SetFixedExpenses"
        android:ems="10"
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/saveCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SetCatValue"
        android:layout_toEndOf="@+id/editExpenses"
        android:background="@mipmap/ic_check_circle_black_24dp"
        app:srcCompat="@mipmap/ic_check_circle_black_24dp" />

    <TextView
        android:id="@+id/EstimatedBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Estimated Balance"
        android:layout_below="@+id/categorycombobox"
        android:layout_alignStart="@+id/EstimatedVariableExpenses" />

    <Button
        android:id="@+id/setMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        android:text="Set Month"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/categorycombobox" />

    <EditText
        android:id="@+id/SetEstimatedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EstimatedBalance"
        android:layout_toEndOf="@+id/Income"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>
