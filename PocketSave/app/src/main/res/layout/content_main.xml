<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lpoo.pocketsave.View.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/heptagon"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.882"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/Cat1btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BalanceView"
        android:layout_toStartOf="@+id/BalanceText"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/restaurant_cutlery"
        android:tag="cat1"
        android:text="Eat"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.268"
        app:layout_constraintRight_toRightOf="@+id/imageView3" />

    <Button
        android:id="@+id/Cat2btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Cat1btn"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/BalanceText"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/underground"
        android:onClick="NewTransaction"
        android:tag="cat2"
        android:text="Transport"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="56dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.178" />

    <Button
        android:id="@+id/Cat3btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:onClick="NewTransaction"
        android:drawableTop="@drawable/polo"
        android:text="Clothes"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.471"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.028" />

    <Button
        android:id="@+id/Cat4btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:drawableTop="@drawable/pills"
        android:text="Health"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintVertical_bias="0.471" />

    <Button
        android:id="@+id/Cat5btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/gamepad"
        android:textColor="@android:color/black"
        android:text="Joy"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.719"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.128" />

    <Button
        android:id="@+id/Morebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:text="More"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintVertical_bias="0.717"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3" />

    <TextView
        android:id="@+id/BalanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:layout_above="@+id/Morebtn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.586" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Addbtn"
        android:layout_width="100px"
        android:layout_height="100px"
        android:clickable="true"
        android:onClick="getNewCategory"
        app:backgroundTint="@android:color/background_light"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.793"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/BalanceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Statistics"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:onClick="getStats"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.481"
        app:layout_constraintHorizontal_bias="0.501" />


</android.support.constraint.ConstraintLayout>