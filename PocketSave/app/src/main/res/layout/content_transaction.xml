<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lpoo.pocketsave.View.TransactionActivity"
    tools:showIn="@layout/activity_transaction">

    <TextView
        android:id="@+id/valueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Value"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="Date"
        android:textSize="18sp"
        android:layout_below="@+id/ValueText"
        android:layout_alignStart="@+id/valueView"
        android:layout_alignEnd="@+id/valueView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/DescriptionText"
        android:layout_alignBottom="@+id/DescriptionText"
        android:layout_alignStart="@+id/textView3" />

    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/ValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/valueView"
        android:layout_alignBottom="@+id/valueView"
        android:layout_alignStart="@+id/DateView"
        android:hint="money spent"
        android:inputType="numberDecimal"
        app:enable_default_hint="false" />

    <EditText
        android:id="@+id/DescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="2"
        android:minLines="1"
        android:maxLines="3"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/receiptText"
        android:layout_marginTop="41dp">
    </EditText>

    <TextView
        android:id="@+id/receiptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receipt Photo"
        android:textSize="18sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/Savebtn"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/Savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ValueText" />

    <TextView
        android:id="@+id/DateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DescriptionText"
        android:layout_alignTop="@+id/textView3"
        android:text="Choose Date"
        android:layout_alignEnd="@+id/DescriptionText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Payment Method"
        android:layout_alignBottom="@+id/radioGroupPaymentMethod"
        android:layout_alignStart="@+id/textView4" />

    <RadioGroup
        android:id="@+id/radioGroupPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/money"
        android:orientation="horizontal"
        android:layout_below="@+id/DescriptionText"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="28dp">

        <RadioButton
            android:id="@+id/creditcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignTop="@+id/radioGroupPaymentMethod"
            android:layout_weight="1"
            android:button="@drawable/credit_button" />

        <RadioButton
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioGroupPaymentMethod"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/radioGroupPaymentMethod"
            android:button="@drawable/cash_button" />

    </RadioGroup>


</RelativeLayout>
