<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:context="lpoo.pocketsave.View.AddCategoryFragment">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Title"
        android:textSize="@dimen/text_margin"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <EditText
        android:id="@+id/CatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icon"
        android:layout_marginTop="88dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/CatTitle"
        android:layout_alignStart="@+id/textView10" />

    <ImageButton
        android:id="@+id/CatIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignStart="@+id/CatTitle" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/CatIcon"
        android:layout_marginTop="66dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Background Color" />

    <Button
        android:id="@+id/colorbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignEnd="@+id/CatTitle"
        android:layout_marginEnd="38dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="36dp"
        android:text="Estimated Value"
        android:layout_below="@+id/colorbutton"
        android:layout_alignStart="@+id/textView14" />

    <EditText
        android:id="@+id/CatEstimated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddCat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/AddCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/CatTitle"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
