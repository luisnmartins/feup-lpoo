<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageButton
        android:id="@+id/saveCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editExpenses"
        android:layout_alignTop="@+id/addCatMonth"
        android:background="@mipmap/ic_check_circle_black_24dp"
        app:srcCompat="@mipmap/ic_check_circle_black_24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintVertical_bias="0.578" />


    <TextView
        android:id="@+id/Income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Income"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.152" />

    <EditText
        android:id="@+id/SetIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="your income"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/Income"
        android:layout_alignBottom="@+id/Income"
        android:layout_toStartOf="@+id/editExpenses"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintVertical_bias="0.141" />

    <ImageButton
        android:id="@+id/editExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FixedExpenses"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/EstimatedVariableExpenses"
        android:background="@mipmap/ic_settings_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <TextView
        android:id="@+id/FixedExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FixedExpenses"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/SetIncome"
        android:layout_alignStart="@+id/Income"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintVertical_bias="0.306" />

    <EditText
        android:id="@+id/SetFixedExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="expenses"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/FixedExpenses"
        android:layout_alignBottom="@+id/FixedExpenses"
        android:layout_toEndOf="@+id/EstimatedBalance"
        android:layout_marginRight="54dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintVertical_bias="0.303" />

    <TextView
        android:id="@+id/EstimatedVariableExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Estimated Variable Expenses"
        android:layout_below="@+id/SetFixedExpenses"
        android:layout_alignStart="@+id/FixedExpenses"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintVertical_bias="0.475" />

    <TextView
        android:id="@+id/categorycombobox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EstimatedVariableExpenses"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/SetCatValue"
        android:onClick="getCategoriesList"
        android:text="Choose Category"
        android:textAlignment="viewStart"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintVertical_bias="0.584" />

    <EditText
        android:id="@+id/SetCatValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="amount"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/categorycombobox"
        android:layout_alignBottom="@+id/categorycombobox"
        android:layout_toStartOf="@+id/saveCategory"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/EstimatedBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Estimated Balance"
        android:layout_below="@+id/categorycombobox"
        android:layout_alignStart="@+id/EstimatedVariableExpenses"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintVertical_bias="0.703" />

    <Button
        android:id="@+id/setMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Set Month"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintVertical_bias="0.984" />

    <EditText
        android:id="@+id/SetEstimatedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="estimative"
        android:inputType="numberSigned"
        android:layout_below="@+id/EstimatedBalance"
        android:layout_alignEnd="@+id/setMonth"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintVertical_bias="0.824" />

    <ImageButton
        android:id="@+id/addCatMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/SetCatValue"
        android:layout_toStartOf="@+id/categorycombobox"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.587" />

    <TextView
        android:id="@+id/MonthSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

</android.support.constraint.ConstraintLayout>